{
  "$schema": "../src/schemas/repos-schema.json",
  "artifacts": {
    "transcripts-raw": {
      "path": "../transcripts-raw",
      "remote": "git@github.com:yourorg/transcripts-raw.git",
      "description": "Raw transcript files as ingested from sources",
      "filePatterns": ["*.txt", "*.json", "*.md"]
    },
    "knowledge-base": {
      "path": "../knowledge-base",
      "remote": "git@github.com:yourorg/knowledge-base.git",
      "description": "Processed and structured knowledge artifacts",
      "filePatterns": ["*.md", "*.json"]
    }
  }
}
