{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Artifact Repos Configuration",
  "description": "Registry of external git repositories that hold artifacts produced by knowledge-ingress",
  "type": "object",
  "required": ["artifacts"],
  "properties": {
    "artifacts": {
      "type": "object",
      "description": "Map of repo name to its configuration",
      "additionalProperties": {
        "type": "object",
        "required": ["path", "description"],
        "properties": {
          "path": {
            "type": "string",
            "description": "Filesystem path (relative to project root or absolute)"
          },
          "remote": {
            "type": "string",
            "description": "Git remote URL for cloning"
          },
          "description": {
            "type": "string",
            "description": "What this artifact repo contains"
          },
          "filePatterns": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Glob patterns for files this repo manages"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
